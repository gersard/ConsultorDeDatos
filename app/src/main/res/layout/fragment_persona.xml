<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    tools:context=".ui.PersonaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="2"
            android:text="Gerardo Ignacio Mascayano Beroiza"
            android:textColor="@color/colorText"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nombre"
            android:layout_alignStart="@+id/txt_nombre"
            android:layout_below="@+id/txt_nombre"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lines="1"
            android:text="Pais: "
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nombre"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/pais"
            android:layout_toRightOf="@+id/pais"
            android:gravity="center"
            android:lines="1"
            android:text="Chile"
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/rut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nombre"
            android:layout_alignStart="@+id/txt_nombre"
            android:layout_below="@+id/pais"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lines="1"
            android:text="Rut: "
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_rut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_pais"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/rut"
            android:layout_toRightOf="@+id/rut"
            android:gravity="center"
            android:lines="1"
            android:text="189537883"
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nombre"
            android:layout_alignStart="@+id/txt_nombre"
            android:layout_below="@+id/rut"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lines="1"
            android:text="Edad: "
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_rut"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/rut"
            android:layout_toRightOf="@+id/rut"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:lines="1"
            android:text="21"
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nombre"
            android:layout_alignStart="@+id/txt_nombre"
            android:layout_below="@+id/edad"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lines="1"
            android:text="Sexo: "
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_edad"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/rut"
            android:layout_toRightOf="@+id/rut"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:lines="1"
            android:text="Masculino"
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nombre"
            android:layout_alignStart="@+id/txt_nombre"
            android:layout_below="@+id/sexo"
            android:layout_marginTop="10dp"
            android:gravity="start|top"
            android:lines="2"
            android:text="Fecha de Nacimiento "
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_fecha_nacimiento"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_sexo"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/fecha"
            android:layout_toRightOf="@+id/fecha"
            android:gravity="start|top"
            android:lines="3"
            android:text="19 de noviembre de 1945"
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <!-- ** PARTE DERECHA ** -->

        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="RegiÃ³n: "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_pais"
            android:layout_toRightOf="@+id/txt_fecha_nacimiento"
            android:layout_toEndOf="@+id/txt_fecha_nacimiento" />

        <TextView
            android:id="@+id/txt_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="Metropolitana "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_pais"
            android:layout_toRightOf="@+id/region"
            android:layout_toEndOf="@+id/region" />

        <TextView
            android:id="@+id/provincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:text="Provincia: "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_rut"
            android:layout_toRightOf="@+id/txt_fecha_nacimiento"
            android:layout_toEndOf="@+id/txt_fecha_nacimiento" />

        <TextView
            android:id="@+id/txt_provincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:text="Valdibia "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_rut"
            android:layout_toRightOf="@+id/provincia"
            android:layout_toEndOf="@+id/provincia" />

        <TextView
            android:id="@+id/comuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:text="Comuna: "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_edad"
            android:layout_toRightOf="@+id/txt_fecha_nacimiento"
            android:layout_toEndOf="@+id/txt_fecha_nacimiento" />

        <TextView
            android:id="@+id/txt_comuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:text="Valdivia "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_edad"
            android:layout_toRightOf="@+id/comuna"
            android:layout_toEndOf="@+id/comuna" />

        <TextView
            android:id="@+id/circunscripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:text="CircunscripciÃ³n: "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_sexo"
            android:layout_toRightOf="@+id/txt_fecha_nacimiento"
            android:layout_toEndOf="@+id/txt_fecha_nacimiento" />

        <TextView
            android:id="@+id/txt_circunscripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:text="Valdivia "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_sexo"
            android:layout_toRightOf="@+id/circunscripcion"
            android:layout_toEndOf="@+id/circunscripcion" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:lines="4"
            android:text="DirecciÃ³n: "
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_fecha_nacimiento"
            android:layout_toRightOf="@+id/txt_fecha_nacimiento"
            android:layout_toEndOf="@+id/txt_fecha_nacimiento" />

        <TextView
            android:id="@+id/txt_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:lines="4"
            android:text="Callejon Haverbeck 366"
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_alignTop="@+id/txt_fecha_nacimiento"
            android:layout_toRightOf="@+id/direccion"
            android:layout_toEndOf="@+id/direccion" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
