<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_persona"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    tools:context=".ui.PersonaFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_nombre"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:lines="2"
                android:text="Gerardo Ignacio Mascayano Beroiza"
                android:textColor="@color/colorText"
                android:textSize="18dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_user"
                android:drawableStart="@drawable/ic_user"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Datos Personales"
                android:textColor="@color/colorText"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/txt_pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="Pais: Chile"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_rut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Rut: 189537883"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorText"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/txt_edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:lines="1"
                android:text="Edad: 21"
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="Sexo: Masculino"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_fecha_nacimiento"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:lines="2"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:text="Fecha de Nacimiento: 19 de noviembre de 1945"
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_user"
                android:drawableStart="@drawable/ic_user"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Datos Geográficos"
                android:textColor="@color/colorText"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/txt_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:text="Region: Metropolitana "
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_provincia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:text="Provincia: Valdibia"
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_comuna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Comuna: Valdivia"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_circunscripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="start|center_vertical"
                android:lines="1"
                android:text="Circunscripción: Valdivia"
                android:textColor="@color/colorText"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:text="Direccion: Callejon Haverbeck 366"
                android:textColor="@color/colorText"
                android:textSize="15dp" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.v7.widget.CardView>
